func TestAccRuntimeconfigConfigDatasource_basic(t *testing.T) {
	t.Parallel()

	provider.VcrTest(t, resource.TestCase{
		PreCheck:  func() { provider.TestAccPreCheck(t) },
		Providers: provider.TestAccProviders,
		Steps: []resource.TestStep{
			{
				Config: testAccRuntimeconfigDatasourceConfig(google.RandString(t, 10)),
				Check: resource.ComposeTestCheckFunc(
					google.CheckDataSourceStateMatchesResourceState("data.google_runtimeconfig_config.default", "google_runtimeconfig_config.default"),
				),
			},
		},
	})
}

func testAccRuntimeconfigDatasourceConfig(suffix string) string {
	return fmt.Sprintf(`
resource "google_runtimeconfig_config" "default" {
	name        = "runtime-%s"
	description = "runtime-%s"
}

data "google_runtimeconfig_config" "default" {
  name = google_runtimeconfig_config.default.name
}
`, suffix, suffix)
}

